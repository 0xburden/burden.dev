---
import BaseLayout from '../layouts/BaseLayout.astro';

const linkz = [
  {
    text: 'twitter',
    href: 'https://twitter.com/0xburden',
  },
  {
    text: 'github',
    href: 'https://github.com/0xburden',
  },
  {
    text: 'waifus anonymous',
    href: 'https://waifusanonymous.com',
  },
];
---

<style lang="scss">
  main {
    background: rgb(245,0,239);
    background: linear-gradient(45deg, rgba(245,0,239,1) 35%, rgba(135,18,121,1) 100%);
    min-height: 100vh;
  }

  .it-me {
    position: fixed;    
    bottom: 0;
    left: 10px;
    height: auto;
    object-fit: contain;
    max-width: 66vw;

    @media (min-width: 1024px) {
      max-width: 50vw;
    }
  }

  .linkz {
    --white: #fafafa;
    --yellow: #F7B32B;

    color: var(--white);
    padding: 1rem;
    position: fixed;
    top: 1rem;
    right: 10px;
    text-align: right;
    z-index: 10;

    ul {
      list-style: none;

      li {
        margin-top: 2rem;

        a {
          color: var(--white);
          text-shadow: 4px 4px 0px #000000;
          text-decoration: none;
          
          &:focus,
          &:hover {
            color: var(--yellow);
          }
        }
      }
    }

    @media (min-width: 768px) {
      font-size: 2.5vw;
    }
  }
</style>

<BaseLayout title="@0xburden">
  <main>
    <div class="linkz">
      <ul>
        {linkz.map(({ text, href }) => (
        <li key={text}>
          <a href={href} target="_blank" rel="noopener noreferrer">{text}</a>
        </li>
        ))}
      </ul>
    </div>
    <img src="/assets/yozora.png" class="it-me" alt="real image of anime character 0xburden" />
  </main>
</BaseLayout>
